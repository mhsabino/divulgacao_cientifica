.col-xs-12
  = flash_message

.col-xs-12
  %h3
    = Discipline.model_name.human(count: 2)

.col-xs-12
  = simple_form_for [:admin, discipline] do |f|
    = f.error_notification
    = f.input :name
    = f.input :course_id, collection: courses_by_university(current_university), include_blank: t('select_option')
    = f.input :description
    = f.button :submit
