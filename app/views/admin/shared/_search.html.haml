- filter_params = params.fetch(:filter, {}) || []
- path ||= admin_root_path

= simple_form_for :search, url: path, method: :get, role: :search do |f|
  .form-group
    .input-group
      = text_field_tag :search, params[:search], placeholder: t('search'), class: 'form-control'
      %span.btn-search.input-group-addon{ data: {input_search: '' } }
        %i.fa.fa-search

  = fields_for :filter do |ff|
    - filter_params.each do |filter_param|
      = ff.hidden_field filter_param, value: filter_params.fetch(filter_param, '')
