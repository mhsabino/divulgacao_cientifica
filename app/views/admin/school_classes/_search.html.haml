- filter_params = params.fetch(:filter, {}) || []

= simple_form_for :search, url: admin_school_classes_path, method: :get, role: :search do |f|
  .form-group
    .input-group
      = text_field_tag :search, params[:search], placeholder: t('search'), class: 'form-control'
      %span.btn-search.input-group-addon{ data: {input_search: '' } }
        %i.fa.fa-search

  = fields_for :filter do |ff|
    = ff.hidden_field :course, value: filter_params.fetch(:course, '')
    = ff.hidden_field :year, value: filter_params.fetch(:year, '')
    = ff.hidden_field :period, value: filter_params.fetch(:period, '')
