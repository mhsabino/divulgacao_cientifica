= simple_form_for [:admin, educator] do |f|
  .col-xs-12
    = f.error_notification
  .col-xs-6
    = f.input :name
  .col-xs-6
    = f.input :registration
  .col-xs-6
    = f.input :course_id, collection: courses_by_university(current_university),
        include_blank: t('select_option')

  = f.simple_fields_for :user do |u|
    .col-xs-6
      = u.input :email
    .col-xs-6
      = u.input :password
    .col-xs-6
      = u.input :password_confirmation

  .col-xs-12
    = save_button(f)
