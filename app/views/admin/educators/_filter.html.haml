= simple_form_for :filter, url: admin_educators_path, method: :get do |f|
  = hidden_field_tag :search, params[:search]

  = f.input :course, collection: courses_by_university(current_university), label: false, input_html: { data: { filter: '' } }, include_blank: t('select_option'), selected: params.fetch(:filter, {}).fetch(:course, '')
